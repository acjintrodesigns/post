                <div class="form-group">
                    <label for="fname">Position</label>
                    <input class="form-control" type="text" name="subject" required placeholder="Position applying for"
                        id="">
                </div>
                <!-- <div class="form-group">
                    <input class="form-control" type="email" name="email" required placeholder="email:" id="">
                </div> -->

                <div class="form-group">
                    <label for="fname">First Name</label>
                    <input class="form-control" type="text" id="fname" name="fname" placeholder="Your name..">
                </div>

                <div class="form-group">
                    <label for="surname">Last Name</label>
                    <input class="form-control" type="text" id="surname" name="surname" placeholder="Your surname..">
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" id="email" name="email" placeholder="Your email..">
                </div>

                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input class="form-control" type="text" id="phone" name="phone" placeholder="Your phone number..">
                </div>


                <div class="form-group">
                    <textarea class="form-control" name="body" cols="30" rows="10" required placeholder="Motivation:"
                        id=""></textarea>
                </div>
                <div class="form-group">
                    <label for="attachment">Please attach your cv in pdf or word document</label>
                    <input class="form-control" type="file" name="pdf" required id="">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary">
                        Submit CV
                    </button>
                </div>
            </form>
        </div>
    </div>

    
